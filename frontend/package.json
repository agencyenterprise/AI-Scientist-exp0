{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "style": "stylelint \"src/**/*.{css,scss}\" --fix",
    "style:check": "stylelint \"src/**/*.{css,scss}\" --max-warnings=0 --allow-empty-input",
    "check-tailwind": "node check-tailwind.js",
    "fix-tailwind": "node check-tailwind.js && pkill -f 'next dev' || true && npm run dev",
    "gen:api-types": "openapi-typescript http://localhost:8000/openapi.json --output src/types/api.gen.ts",
    "gen:api-types:from-file": "openapi-typescript ../backend/openapi.json --output src/types/api.gen.ts",
    "prebuild": "sh -c 'if [ -f ../backend/openapi.json ]; then npx openapi-typescript ../backend/openapi.json --output src/types/api.gen.ts; else echo \"Skipping API type generation (no ../backend/openapi.json)\"; fi'",
    "prepare": ":"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.10",
    "@types/diff-match-patch": "^1.0.36",
    "@types/js-cookie": "^3.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "js-cookie": "^3.0.5",
    "katex": "0.16.22",
    "lucide-react": "^0.554.0",
    "next": "15.4.8",
    "react": "19.1.2",
    "react-dom": "19.1.2",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "7.0.2",
    "rehype-katex": "7.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "6.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "openapi-typescript": "^7.4.0",
    "prettier": "^3.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
